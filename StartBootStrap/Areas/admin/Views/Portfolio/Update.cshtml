@model Portfolio
@{
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="portfolio" asp-action="update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <img src="~/Uploads/@Model.Image" alt="Alternate Text" width="100" />
                    <label asp-for="@Model.ImageFile" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Title" class="form-label">Title</label>
                    <input class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Text" class="form-label">Content</label>
                    <textarea class="form-control" asp-for="@Model.Text"></textarea>
                    <span asp-validation-for="@Model.Text" class="text-danger"></span>
                </div>
                <input asp-for="@Model.Id" hidden />
                <input asp-for="@Model.Image" hidden />

                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>

